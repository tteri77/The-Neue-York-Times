<!doctype html>
%html
	%head
		%title
			The Neue York Times
		= csrf_meta_tag
		= stylesheet_link_tag "fonts", "application"
		= javascript_include_tag "application", "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.js"
		
	%body
		#body-wrapper
	
			= render :partial => "slider_controls" 
			
			#page-wrapper
				
				%header#primary-header-wrapper
					%header#primary-header
						%hgroup#primary-title-wrapper
							%h1#primary-title
								The Neue York Times
				
				#main-area-wrapper
					#main-area

						= render :partial => "slider", :object => @items
																
			%footer#primary-footer-wrapper
				%footer#primary-footer
													
		/%p
		/	= @string